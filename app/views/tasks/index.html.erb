<h1> All of our tasks</h1>

<ul>
  <% @tasks.each do |task|  %>
  <li style ="list-style-type: none">
    <%= check_box_tag task.id, task.title, task.completed %>

    <%= link_to task.title, task_path(task) %>
    <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, task_path(task), method: "delete",  data: {confirm: "Are you sure"} %>
  </li>
  <% end %>
</ul>

<%= link_to "Add a task", task_new_path %>

